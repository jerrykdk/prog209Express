<!-- views/pages/about.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css">
</head>
<style>
    #myProgress {
      width: 100%;
      background-color: #ddd;
    }
    
    #myBar {
      width: 1%;
      height: 30px;
      background-color: #4CAF50;
    }
    </style>
<body class="container">

<header>
    <% include ../partials/header %>
</header>

<main>
    <div class="row">
        <div class="col-sm-8">    
            <div class="jumbotron">
                <h1>Your Progress</h1>


<h2> <%= "Your have a total of " + dataArray.length + " visits"%></li> </h2>

<h3>Keep Exploring</h3>
            </div>
        </div>
    
        <div class="col-sm-4">        
            <div class="well">
                <h3>You Visited</h3>
                <%if (dataArray != null) { %>
       
                    <ul class="list-group">
                        <% for(var i=0; i<dataArray.length; i++) {%>
                          <li class="list-group-item"><%= "" + dataArray[i].id + "             in " + dataArray[i].date %></li>
                        <% } %>
                      </ul>
            
            
                    <% } %>
            </div>
        </div>
    
    </div>
    </main>
    <footer>
        <% include ../partials/footer %>
    </footer>
    
    </body>
    </html>